		function fname(e, event)	{																		<!-- backspace         tab                 enter            del/arrows             spacebar-->
			if((event.which>=65&&event.which<=90) || (event.which>=97&&event.which<=122) || event.which==8 || event.which==9 || event.which==13 || event.which==0 || event.which==32 ){
				e=e.parentNode;
				e=getFirstChildWithTagName(e,"SPAN");
				e.style.visibility="hidden";
			}
			else {
				event.preventDefault();
				e=e.parentNode;
				e=getFirstChildWithTagName(e,"SPAN");
				e.style.visibility="visible";
			}
		}
		function uname(e, event)	{
			if((event.which>=65&&event.which<=90) || (event.which>=97&&event.which<=122) || (event.which>=48&&event.which<=57) || event.which==8 || event.which==0 )	{
				e=e.parentNode;
				e=getFirstChildWithTagName(e,"SPAN");
				e.style.visibility="hidden";
			}
			else {
				event.preventDefault();
				alert(event.which);
				e=e.parentNode;
				e=getFirstChildWithTagName(e,"SPAN");
				e.style.visibility="visible";
			}
		}
		function getFirstChildWithTagName(element, tagName ) {
      		for ( var i = 0; i < element.childNodes.length; i++ ) {
        		if ( element.childNodes[i].nodeName == tagName ) return element.childNodes[i];
      		}
    	}
		function getFirstChildWithId(element, idName ) {
      		for ( var i = 0; i < element.childNodes.length; i++ ) {
        		if ( element.childNodes[i].id == idName ) return element.childNodes[i];
      		}
    	}
    	function pcheck(e, event)	{
    		if((event.which>=65&&event.which<=90) || (event.which>=97&&event.which<=122) || event.which==50 || event.which==46 || event.which==95 || event.which==64 || (event.which>=48&&event.which<=57) || event.which==8 || event.which==0 )	{
    			if(e.value.length<6)	{
    				e.id="inperror";
    				e=e.parentNode;
					e1=getFirstChildWithTagName(e,"SPAN");
					e1.innerHTML="Password strength - weak";
					e1.style.visibility="visible";
					e1.style.color="#FF0000";
    			} else if(e.value.length>=10)	{
    				e.id="inp";
    				e=e.parentNode;
					e1=getFirstChildWithTagName(e,"SPAN");
					e1.innerHTML="Password strength - strong";
					e1.style.visibility="visible";
					e1.style.color="#FFFFFF";
    			} else {
    				e.id="inp";
    				e=e.parentNode;
					e1=getFirstChildWithTagName(e,"SPAN");
					e1.innerHTML="Password strength - medium";
					e1.style.visibility="visible";
					e1.style.color="#FFFFFF";
				}
			}
			else {
    				event.preventDefault();
    				e.id="inperror";
    				e=e.parentNode;
					e1=getFirstChildWithTagName(e,"SPAN");
					e1.innerHTML="password can contain only alphabets, digits and symbols @ or . or _";
					e1.style.visibility="visible";
			}
    	}
    	function pcheck1(e)	{
			if(e.id.localeCompare("inperror")!=0)	{
				e.id="inp";
  				e=e.parentNode;
				e1=getFirstChildWithTagName(e,"SPAN");
				e1.style.visibility="hidden";
			}
    	}
    	function pverify(e)	{
    		p1=document.getElementById("inp");
    		p2=e;
    		var str1=p1.value;
    		var str2=p2.value;
    		if(str1.localeCompare(str2)!=0)	{
  				e.id="inperror";
  				e=e.parentNode;
				var e1=getFirstChildWithTagName(e,"SPAN");
				e1.innerHTML="passwords don't match";
				e1.style.visibility="visible";
    		} else {
				e.id="inpp";
  				e=e.parentNode;
				var e1=getFirstChildWithTagName(e,"SPAN");
				e1.innerHTML="";
				e1.style.visibility="hidden";
			}
    	}
    	function signupform(e, event)	{
    		var e1=document.getElementById("contents");
    		var i=0;
    		var flag=0;
    		for(i=0;i<e1.childNodes.length;i++)	{
    			var e2=e1.childNodes[i];
				if(e2.tagName == "P")	{
					for(var j=0;j<e2.childNodes.length;j++)	{
						var e3=e2.childNodes[j];
						if(e3.tagName == "INPUT")	{
							if(e3.id=="inperror")	{
								flag=1;
							}
						}
					}
				}
    		}
			if(flag==0)	{
    			var el1=document.getElementById("user_signup");
                        el1.submit();
    		}
    		else {
				alert("Enter correct user details");
                                event.preventDefault();
			}
    	}
function expand(el)	{
			var e1=document.getElementsByClassName("md-content1");
			var e2=document.getElementsByClassName("md-content");
			e1[0].className="md-content";
			e2[0].className="md-content1";
		}
		function expand1(el) {
			var e2=document.getElementsByClassName("md-content");
			var e1=document.getElementsByClassName("md-content1");
			e2[0].className="md-content1";
			e1[0].className="md-content";
		}
